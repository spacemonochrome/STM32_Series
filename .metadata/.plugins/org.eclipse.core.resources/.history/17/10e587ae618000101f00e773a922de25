/* USER CODE BEGIN 0 */
static int _GetData(void * p, const U8 ** ppData, unsigned NumBytesReq, U32 Offset) {
    UINT NumBytesRead;
    FIL* fp = (FIL*)p;
    if(f_lseek(fp, Offset) != FR_OK) return 0;
    f_read(fp, _acBuffer, NumBytesReq, &NumBytesRead);
    *ppData = _acBuffer;
    return NumBytesRead;
}
/* USER CODE END 0 */

