/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
#define SAMPLES 100         // Örnek sayısı
#define DAC_RESOLUTION 4095 // 12-bit DAC
#define DAC_MID 2047        // Orta seviye


uint16_t sine_wave[SAMPLES];

// Sinüs tablosunu oluştur
void initSinTable(void)
{
    for (int i = 0; i < SAMPLES; i++)
    {
    	sine_wave[i] = (uint16_t)((sinf(2.0f * M_PI * i / SAMPLES) + 1.0f) * DAC_MID);
    }
}

// DMA ile DAC
void DAC_DMA_Start(void)
{
    HAL_DAC_Start_DMA(&hdac, DAC_CHANNEL_1, (uint32_t*)sine_wave, SAMPLES, DAC_ALIGN_12B_R);
}

// DAC ve Timer başlat
void DAC_Init(void)
{
    __HAL_RCC_DAC_CLK_ENABLE();
    __HAL_RCC_TIM6_CLK_ENABLE();

    hdac.Instance = DAC;
    HAL_DAC_Init(&hdac);

    DAC_ChannelConfTypeDef sConfig = {0};
    sConfig.DAC_Trigger = DAC_TRIGGER_T6_TRGO; // Timer 6 trigger
    sConfig.DAC_OutputBuffer = DAC_OUTPUTBUFFER_ENABLE;
    HAL_DAC_ConfigChannel(&hdac, &sConfig, DAC_CHANNEL);
    HAL_DAC_Start(&hdac, DAC_CHANNEL);

    // Timer 6: DAC update frekansı
    htim6.Instance = TIM6;
    htim6.Init.Prescaler = 840-1;   // 1 MHz sayıcı frekansı (84MHz / 84)
    htim6.Init.Period = 1000-1;    // DAC update 1 kHz örnekleme hızı
    htim6.Init.CounterMode = TIM_COUNTERMODE_UP;
    HAL_TIM_Base_Init(&htim6);

    TIM_MasterConfigTypeDef sMasterConfig = {0};
    sMasterConfig.MasterOutputTrigger = TIM_TRGO_UPDATE;
    sMasterConfig.MasterSlaveMode = TIM_MASTERSLAVEMODE_DISABLE;
    HAL_TIMEx_MasterConfigSynchronization(&htim6, &sMasterConfig);

    HAL_TIM_Base_Start(&htim6);
}

// Timer6 ve DAC başlat
void System_Init(void)
{
    // DAC başlat
    HAL_DAC_Start(&hdac, DAC_CHANNEL_1);

    // Timer6 başlat
    HAL_TIM_Base_Start(&htim6);

    // DMA ile DAC’a veri gönder
    HAL_DAC_Start_DMA(&hdac, DAC_CHANNEL_1, (uint32_t*)sinTable, SAMPLES, DAC_ALIGN_12B_R);
}
