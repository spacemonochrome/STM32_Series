WM_HWIN CreateWindow(void);
WM_HWIN CreateWindow(void) {
  WM_HWIN hWin;

  PROGBAR_Handle prog;

  hWin = GUI_CreateDialogBox(_aDialogCreate, GUI_COUNTOF(_aDialogCreate), _cbDialog, WM_HBKWIN, 0, 0);

  prog = WM_GetDialogItem(hWin, ID_PROGBAR_0);

  while(1)
  {
	  PROGBAR_SetValue(prog, yuzdelik);

	  if (yuzdelik > 99)
	  {
		  yuzdelik = 0
	  }

	  HAL_Delay(100);
	  GUI_Exec();
  }

  return hWin;
}

